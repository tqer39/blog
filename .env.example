# Terraform variables (Optional - for local development only)
# TF_VAR_cloudflare_api_token=
# TF_VAR_cloudflare_zone_id=
# TF_VAR_vercel_api_token=
# TF_VAR_vercel_team_id=

# CMS API (apps/blog - server-side only)
# CMS_API_URL=http://localhost:3200/v1  # (Required)
# CMS_API_KEY=your-api-key  # (Required)

# Admin authentication (apps/blog)
# Generate password hash: node -e "require('bcryptjs').hash('your-password', 12).then(console.log)"
# ADMIN_PASSWORD_HASH=  # (Required)
# AUTH_SECRET=  # (Required) Random string for session signing (32+ characters)

# Site URL for SEO (apps/blog)
# NEXT_PUBLIC_SITE_URL=https://yourdomain.com  # (Required)

# Google Analytics 4 (apps/blog)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX  # (Required)

# Basic Auth for dev environment (apps/blog - Optional)
# BASIC_AUTH_ENABLED=true
# BASIC_AUTH_USER=
# BASIC_AUTH_PASS=
