{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "out/**", "dist/**"],
      "env": ["CMS_API_URL", "CMS_API_KEY", "NEXT_PUBLIC_SITE_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "check": {
      "dependsOn": ["^build"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "env": ["CMS_API_URL", "CMS_API_KEY"],
      "cache": false
    }
  }
}
