{
  "name": "@blog/cms-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:migrate:local": "wrangler d1 execute blog-cms --local --file=./migrations/001_init.sql",
    "db:migrate:remote": "wrangler d1 execute blog-cms --remote --file=./migrations/001_init.sql",
    "seed": "tsx scripts/seed.ts",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@blog/cms-types": "workspace:*",
    "@blog/utils": "workspace:*",
    "hono": "4.12.2"
  },
  "devDependencies": {
    "@blog/config": "workspace:*",
    "@blog/test-utils": "workspace:*",
    "@cloudflare/workers-types": "4.20260207.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "wrangler": "4.67.0"
  }
}
