{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "main"
  ],
  "dependencyDashboard": true,
  "extends": [
    "config:base"
  ],
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "automerge": true,
      "enabled": true,
      "matchManagers": [
        "pre-commit"
      ]
    },
    {
      "automerge": true,
      "major": {
        "automerge": false
      },
      "packagePatterns": [
        "^@types/"
      ]
    }
  ],
  "timezone": "Asia/Tokyo"
}
