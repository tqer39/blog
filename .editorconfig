root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2

[*.{py}]
indent_size = 4

[*.{md}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.tf]
indent_size = 2

[*.sh]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = true

[*.css]
indent_size = 2

[justfile]
indent_size = 4
